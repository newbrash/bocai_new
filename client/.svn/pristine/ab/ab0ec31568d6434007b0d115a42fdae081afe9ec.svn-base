<script>
import dentGameHeader from "@/components/common/dentGameHeader";
import bets from "./compoent-bets";
import { jsksobj } from "@/js/jsks";

export default {
  components: {
    dentGameHeader,
    bets
  },
  data() {
    return {
      /* 数据相关 */
      odds:{},  //全部赔率信息
      jsksobj, //用于生成子玩法的对象
      currentOdds: '',  //当前选择的大玩法（默认第一种）
      default_gold: 2,  //每单的金额
      shouldCommit:[],  //两面的下注信息
      totalBets:0,  //下了多少注

      /* 状态相关 */
      activeTab: 0,  //当前激活的 子玩法的id
      openLately: false,  //近期开奖 展示收起
      oddsTips: false, //玩法规则 弹窗
      timer:{}
    }
  },
  computed:{},
  mounted: function() {
    this.$parent.tabbarShow = false;
    this.getOddsData();
  },
  methods: {

    //切换不同的玩法
    onSwitch(val) {
      this.currentOdds = val;
      //将激活的tab改为0 ，清空下注信息
      this.activeTab = 0;
      this.shouldCommit = [];
    },

    //请求 赔率 数据
    getOddsData() {
      let haveCache = !!this.getLocalCache('jsks-odds');
      let version = haveCache ? this.getLocalCache('jsks-version') : -1;
      let gameGongHost  = this.GLOBAL.gameGongHost;
      const sendDataToServer = () => {
        this.senddata({type:"deskInfo",game:'Jsks',version});
      }

      //请求数据
      if (!this.GLOBAL.gameSocketHand) {
        this.createSocket('ws://192.168.2.100:2525', () => {
          this.dealOnMessage();
          sendDataToServer();
        });
      } else {
        this.dealOnMessage();
        sendDataToServer();
      }

    },

    //处理返回的数据
    dealOnMessage() {
      this.onmessage( res => {
        res = JSON.parse(res);
        //保持心跳
        if(res.code === 'pong'){ this.senddata({type:"ping"}) };
        //最新期号
        if(res.issue){
          this.nextIssue = res.issue;
          this.GLOBAL.hecai.issue = res.issue;
        };
        //处理赔率信息
        if(res.deskInfo) deskInfoFunc.call(this);
        //处理 近期开奖信息
        if(res.recentInfo) recentInfoFunc.call(this);
        //countdown 启动倒计时
        if(res.countdown){
          console.log('服务器发来下期开奖时间戳 '+ new Date(res.countdown*1000).Format('yyyy-MM-dd hh:mm:ss'))
          this.GLOBAL.hecai.countdown = res.countdown*1000;
          this.countTime(res.countdown*1000,'timeToOpen');
        };

        function deskInfoFunc(){
          //对比 version 版本号
          let serverVersion = res.deskInfo.version;
          let localVersion = this.getLocalCache('jsks-version')+'' || -1;

          if(serverVersion > localVersion) {
            ['odds','version'].forEach(key => {
              if(res.deskInfo[key] !== undefined){
                this[key] = res.deskInfo[key];
                this.setLocalCache('jsks-'+key,res.deskInfo[key]);
              }
            })
          }else if(serverVersion == localVersion){
            ['odds','version'].forEach(key => {
              this[key] = this.getLocalCache('jsks-'+key);
            })
            console.log('%c 江苏快三赔率没有更改，从localStorage读取','color: red;');
          }
        }

        function recentInfoFunc(){
          console.log('%c 更新开奖信息','color: red;');
          this.recentInfo = res.recentInfo;
        };

      })
    },

    // endTimeStamp时间戳 dataStr...
    countTime(endTimeStamp,dataStr) {
      console.log('开启倒计时');
      let setTimer = () => {
        let leftTime = endTimeStamp - new Date().getTime(); //时间差
        //定义变量 d,h,m,s保存倒计时的时间
        let d,h,m,s;
        function toFix(str){
          return str < 10 ? '0' + str : str;
        }
        if (leftTime>=0) {
            // d = Math.floor(leftTime/1000/60/60/24);
            h = toFix(Math.floor(leftTime/1000/60/60%24));
            m = toFix(Math.floor(leftTime/1000/60%60));
            s = toFix(Math.floor(leftTime/1000%60));
            // console.log(`${h}:${m}:${s}`);
            this.$set(this.timer,dataStr,`${h}:${m}:${s}`)
        }else {
           clearInterval(this.timer[ dataStr + 'Interval']);
           //开始下一期的倒计时
           this.nextIssue += 1;
           this.countTime(endTimeStamp + 10 * 60 * 1000,dataStr)
        }
      }
      setTimer();
      this.timer[dataStr + 'Interval'] = setInterval(setTimer,1000);
    },

  },

  watch: {
    // watch shouldCommit 用户的下注信息 做相应的处理
    shouldCommit(newVal) {
      let totalBets = 0;
      // 不同的玩法 选择不同的计算注数计算方式
      switch( this.currentOdds ) {
        case "lm":
            totalBets += newVal.length;
          break;
      }

      this.totalBets = totalBets;
    },
  }
}
</script>

